{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "server - debug",
      "request": "launch",
      "mainClass": "com.github.avpcretois.boat_manager.containers.TestBoatManagerApplication",
      "projectName": "boat-manager-application",
      "env": {
        "DOCKER_HOST": "unix://${env:XDG_RUNTIME_DIR}/podman/podman.sock",
        "TESTCONTAINERS_RYUK_DISABLED": "true"
      }
    },
    {
      "name": "client - ng serve",
      "cwd": "${workspaceFolder}/client",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: start",
    },
    {
      "name": "client - ng test",
      "cwd": "${workspaceFolder}/client",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "npm: test"
    }
  ]
}
